<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
		<form-bean name="helloWorldForm" type="com.wordpress.joaoyuki.form.HelloWorldForm" />
	</form-beans>

	<!-- Definimos uma action, que ao entrarmos no endereço /olaMundo irá chamar a classe action HelloWorldAction.  -->
	<action-mappings>
		<action path="/olaMundo" type="com.wordpress.joaoyuki.action.HelloWorldAction" name="helloWorldForm" scope="request">
			<forward name="success" path="/HelloWorld.jsp" />
			<!-- É importante definirmod o forward, que será o caminho que a action executara para retornar a resposta. -->
		</action>

	</action-mappings>

</struts-config>